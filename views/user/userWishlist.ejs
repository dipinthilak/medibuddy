    <script>

    function removeraw(id)
        {
            console.log(id);
            alert(id);
            document.getElementById(id).remove();
            return;
        }

    function addtoCart(productid,rowid)
    {
        console.log("addtocart from wishlist");
        alert(productid)
        $.ajax({
            method: 'POST',
            url: '/addtocart',
            data: { productid }, 
            success : function(res){
                // Handle the response
                if(res.toCart){
                  Swal.fire(
                              'Item added to cart'
                            );
                  removeraw(rowid);

                            
                }
                else{
                  Swal.fire(
                              'Item not added to cart'
                            );
                }
            }
        });
      }
    
    function removewishitem(productId,rowid) {
        console.log(productId,rowid);
            console.log("remove wish item");
            Swal.fire({
                        title: 'Are you sure?',
                        text: "You won't be able to revert this!",
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#3085d6',
                        cancelButtonColor: '#d33',
                        confirmButtonText: 'Yes, delete it!'
                        })
                        .then((result) => {
                        if (result.isConfirmed) {
                            $.ajax({
                            method: 'POST',
                            url: '/removewishitem',
                            data: { productId }, 
                            success : function(res){
                                // Handle the response
                                if(res.itemRemoved)
                                {
                                    removeraw(rowid);
                                    Swal.fire(
                                            'Deleted!',
                                            'Cart item has been deleted.',
                                            'success'
                                            );
                                }
                                else if(res.itemnotRemoved){
                                Swal.fire(
                                            'Cart item not removed'
                                            );
                                    }
                            }
                        });

                        }
                        })

        
        }
