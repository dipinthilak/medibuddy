                                    <tr>
                                        <td class="image product-thumbnail"><img src="/admin-assets/product/<%=order.products[i].productId.image[0]%>" alt="#"></td>
                                        <td class="product-des product-name">
                                            <h5 class="product-name"><a href="shop-product-right.html"><%=order.products[i].productId.productName%></a></h5>
                                            <p class="font-xs"><%=order.products[i].productId.brandName%></p>
                                        </td>
                                        <td class="price" data-title="Price"><span>₹<%=order.products[i].productId.salePrice%></span></td>
                                        <td class="text-center" data-title="Stock">
                                            <div class="">
                                                <!-- <a href="#" class="qty-down"><i class="fi-rs-angle-small-down"></i></a> -->
                                                <span class="qty-val"><%=order.products[i].quantity%></span>
                                                <!-- <a href="#" class="qty-up"><i class="fi-rs-angle-small-up"></i></a> -->
                                            </div>
                                        </td>
                                        <td class="text-right" data-title="Cart">
                                            <span>₹<%= order.products[i].quantity * order.products[i].productId.salePrice %></span>
                                            <%sum = sum + order.products[i].quantity * order.products[i].productId.salePrice %>
                                        </td>
                                    </tr>
                                    <%}%>
                                    
                                </tbody>
                            </table>
