    <script>
    function changeQuantity(productId,count,price,subTotal,cartSubTotal,total,quantity,stock)
            {

        console.log(productId,' , ',count,' , ',price,' , ',subTotal,' , ',cartSubTotal,' , ',total,' , ',quantity);
        const subtotalValue = document.getElementById(subTotal).innerHTML
        const grandTotalValue = document.getElementById('grandTotal').innerHTML
        const quantityValue = document.getElementById(quantity).innerHTML
        let totalValue = parseInt(subtotalValue)

        if (parseInt(quantityValue) + count > parseInt(stock)) {

        if (count === 1) {
            Swal.fire(
                'Alert',
                'Insufficient Stock',
                'error'
            );
            return
            }
            }
        console.log(quantityValue,count);
        if(quantityValue == 1 && count == -1){
            return;
        }
        $.ajax({ 
         url:'/changequantity',
         method: 'post',
         data:{
             productId,
             count
         },
         success : function(res){
            if(res.quantityupdated)
            {
            if(count === 1){
            document.getElementById(subTotal).innerHTML = parseInt(price)+totalValue
            document.getElementById('grandTotal').innerHTML = parseInt(price)+parseInt(grandTotalValue);
            document.getElementById('total').innerHTML = parseInt(price)+parseInt(grandTotalValue);
            document.getElementById(quantity).innerHTML = parseInt(quantityValue)+1;
            }else if(count === -1){
            document.getElementById(subTotal).innerHTML = totalValue-parseInt(price)
            document.getElementById('grandTotal').innerHTML = parseInt(grandTotalValue)-parseInt(price);
            document.getElementById('total').innerHTML = parseInt(grandTotalValue)-parseInt(price);
            document.getElementById(quantity).innerHTML = parseInt(quantityValue)-1;
        }
        Swal.fire(
                'Updated!',
                'item quantity has been updated.',
                'success'
            );
        }
        else{
            Swal.fire(
                'Not Updated!',
                'item quantity not updated.',
                'error'
            );
        }
        }
        })

    }
    

    function removeraw(id)
        {
            document.getElementById(id).remove();
            return;
        }
    function totalupdate(subtotalid)
    {
        console.log(subtotalid);
        const grandTotalValue = document.getElementById('grandTotal').innerHTML;
        const subtotal=document.getElementById( subtotalid).innerHTML;
        document.getElementById('grandTotal').innerHTML =parseInt(grandTotalValue)-parseInt(subtotal);
        document.getElementById('total').innerHTML=parseInt(grandTotalValue)-parseInt(subtotal);
        return;


    }
    function removeItem(productId,rowid,subtotalid) {
            console.log("remove cart item");
            Swal.fire({
                        title: 'Are you sure?',
                        text: "You won't be able to revert this!",
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#3085d6',
                        cancelButtonColor: '#d33',
                        confirmButtonText: 'Yes, delete it!'
                        })
                        .then((result) => {
                        if (result.isConfirmed) {
                            $.ajax({
                            method: 'POST',
                            url: '/removecartitem',
                            data: { productId }, 
                            success : function(res){
                                // Handle the response
                                if(res.itemRemoved)
                                {
                                    totalupdate(subtotalid);
                                    removeraw(rowid);
                                    Swal.fire(
                                            'Deleted!',
                                            'Cart item has been deleted.',
                                            'success'
                                            );
                                }
                                else if(res.itemnotRemoved){
                                Swal.fire(
                                            'Cart item not removed'
                                            );
                                    }
                            }
                        });

                        }
                        })

        
        }
    </script>
