<script>
        function changeStatus(userid)
        {
            alert(userid);
            const ustatus=document.getElementById(userid);
            console.log(ustatus);
            $.ajax({
            method:'POST',
            url:'/admin/AdminuserStatus',
            data:{userid},
            success: function(res)
            {
            console.log("User status change request");
            // Create a new child element (e.g., a <p> element)
                var iconElement = document.createElement("i");
                iconElement.className = "material-icons md-edit";
// Add the child element to the parent

            if(res.blocked){
            console.log(userid +" blocked");
            var iconElement = document.createElement("i");
            iconElement.className = "material-icons md-edit";
            ustatus.appendChild(iconElement);
            ustatus.innerHTML="Unblock";
            ustatus.style.color = "white";
            ustatus.style.background = "hsl(176, 88%, 27%)"                
            }
            if(res.unblocked){
            console.log(userid +" unblocked");
            var iconElement = document.createElement("i");
            iconElement.className = "material-icons md-edit";
            ustatus.appendChild(iconElement);
            ustatus.innerHTML="Block";
            ustatus.style.color = "white";
            ustatus.style.background = "red"
            }
            }
        });
    }
    </script>
