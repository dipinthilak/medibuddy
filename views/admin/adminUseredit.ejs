            <div class="card mb-4">
                <header class="card-header">
                    <div class="row align-items-center">
                        <div class="col-md-3 col-12 me-auto mb-md-0 mb-3">
                            <select class="form-select">
                                <option selected>All users</option>
                                <option>Active users</option>
                                <option>Blocked users</option>>
                            </select>
                        </div>
                    </div>
                </header> <!-- card-header end// -->
                <div class="card-body">
                    <article class="itemlist">
                        <table class="table table-hover" id="dataTable">
                             <thead>
                             <tr>
                                <th scope="col">id</th>
                                <th scope="col">Name</th>
                                <th scope="col">Email</th>
                                <th scope="col">Mobile Number</th>
                                <th scope="col">Account status</th> 
                                <th scope="col">Operations</th> 
                                
                              </tr>
                            </thead>
                            <tbody>
                                <% for(var i=0;i<users.length;i++){ %>
                                    <tr>
                                      <td><%= i+1 %></td>
                                      <td>                                    
                                        <div class="info">
                                        <h6 class="mb-0"><%= users[i].name %></h6>
                                    </div>
                                        
                                        </td>
                                        <td>                                    
                                            <div class="info">
                                            <h6 class="mb-0"><%= users[i].email %></h6>
                                        </div>
                                            
                                            </td>
  
                                            <td>
                                                <div class="col-price"><%= users[i].mobile %></div>
                                            </td>
                                            <td ><%= users[i].isActive %></td>                                     
                                      <td> <div class="d-flex">
                                        <a href="/admin/AdminuserUpdate?userId=<%=users[i]._id%>"  class="btn btn-sm font-sm  btn-dark rounded ">
                                            <i class="material-icons md-edit"></i> Edit</a>
                                           
                                            <a href="/admin/AdminuserStatus?userId=<%=users[i]._id%>"  class="btn btn-sm font-sm mx-2 btn-danger rounded ">
                                                <i class="material-icons md-edit"></i> 
                                                <% if (users[i].isActive) { %>Block<% } else { %> Unblock<% } %>
                                            </a>
                                    <% } %> 
                          </table>
                    </article> <!-- itemlist  .// -->
                </div> <!-- card-body end// -->
            </div> <!-- card end// -->
