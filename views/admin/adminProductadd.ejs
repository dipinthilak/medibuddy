                    </div>
                </div>
                <div class="card">
                    <div class="card-body">
                        <div class="row">   
                                                <form method="post" action="/admin/addnewProductsdata" enctype="multipart/form-data">
                                                    <div class="row">
                                                        <div class="form-group col-md-6">
                                                            <label>Product Name <span class="required">*</span></label>
                                                            <input required="true"  class="form-control square" id="productname" name="productname" type="text">
                                                        </div>
                                                        <div class="form-group col-md-6">
                                                            <label>Product Brand <span class="required">*</span></label>
                                                            <input required="true"  class="form-control square" id="productbrand" name="productbrand" type="text">
                                                        </div>



                                                        <div class="col-sm-6 mb-3">
                                                            <label class="form-label">Category</label>
                                                            <select class="form-select" name="productcategory">
                                                                <% for (var i = 0; i < categorydata.length; i++) { %>
                                                                    <option value="<%= categorydata[i].name %>"><%= categorydata[i].name %></option>
                                                                <% } %>
                                                            </select>
                                                            
                                                        </div>




                                                        <div class="form-group col-md-12">
                                                            <label>Description <span class="required">*</span></label>
                                                            <input required="true"   class="form-control square" id="description" name="description" type="text">
                                                        </div>
                                                        <div class="form-group col-md-6">
                                                            <label>Regular Price<span class="required">*</span></label>
                                                            <input required="true"  class="form-control square" id="product-price" name="productprice" type="number">
                                                        </div>
                                                        <div class="form-group col-md-6">
                                                            <label>Sale Price<span class="required">*</span></label>
                                                            <input required="true"  class="form-control square" id="sale-price" name="saleprice" type="number">
                                                        </div>
                                                        <div class="form-group col-md-6">
                                                            <label>Quantity<span class="required">*</span></label>
                                                            <input required="true"  class="form-control square" id="product-quantity" name="productquantity" type="number">
                                                        </div>

                                                        <div class=" mb-4">
                                                            <div class="card-header">
                                                                <h4>Media</h4>
                                                            </div>

                                                            <div class="input-upload">
                                                                <img src="/assetsbackend/assets/imgs/theme/upload.svg" alt="">
                                                                <input multiple required="true" name="image" id="image" type="file" class="form-control" type="file">
                                                            </div>
                                                        <div class="col-md-12">
                                                            <button type="submit" class="btn btn-danger mt-3 submit" name="submit" value="Submit">Add Product</button>
